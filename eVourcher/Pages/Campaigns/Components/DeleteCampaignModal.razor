<Modal @ref="@deleteCampaignRef">
    <ModalContent Centered Size="ModalSize.Small">
        <ModalHeader>
            <ModalTitle>Delete campaign</ModalTitle>
            <CloseButton />
        </ModalHeader> 
        <ModalBody> 
            <Field>
                <FieldLabel>Do you want to delete this campaign?</FieldLabel>
            </Field>
        </ModalBody>
        <ModalFooter>            
            <Button Color="Color.Primary" Clicked="@DeleteCampaign">Yes</Button>
            <Button Color="Color.Secondary" Clicked="@HideModal">No</Button>
        </ModalFooter>
    </ModalContent>
</Modal>
